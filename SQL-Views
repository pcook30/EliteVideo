CREATE VIEW All_Movies AS
SELECT MOVIE_TITLE
FROM MOVIE;
SELECT * FROM All_Movies;

CREATE VIEW Rent_Details AS
SELECT RENT_NUM AS RENTAL, DETAIL_DUEDATE AS DUE_DATE 
FROM DETAILRENTAL;
SELECT * FROM Rent_Details;

CREATE VIEW Customer_Balance AS
SELECT MEM_FNAME AS First_Name, MEM_LNAME AS Last_Name, MEM_BALANCE AS Balance_Due 
FROM MEMBERSHIP;
SELECT * FROM Customer_Balance;
